{
  "name": "rfid-access-service",
  "version": "1.0.0",
  "description": "RFID access control processor subscribing to MQTT and calling REST API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0"
